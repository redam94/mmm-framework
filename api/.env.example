# MMM Framework API Configuration

# Debug mode
DEBUG=false

# Redis connection
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Storage
STORAGE_BACKEND=local
STORAGE_PATH=./storage

# Authentication - Enable API keys for production use
API_KEYS_ENABLED=true
# Comma-separated list of valid API keys
VALID_API_KEYS=["your-api-key-here","another-key"]

# CORS - Add your frontend URL
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8501"]

# Rate limiting (optional)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=minute

# Model defaults
DEFAULT_N_CHAINS=4
DEFAULT_N_DRAWS=1000
DEFAULT_N_TUNE=1000

# Data settings
MAX_UPLOAD_SIZE_MB=100
DATA_RETENTION_DAYS=30
